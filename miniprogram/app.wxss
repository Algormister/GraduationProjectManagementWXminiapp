/**app.wxss**/
.textLarge{
  font-size: 24px;
}
.textMedium{
  font-size: 16px;
}
.textSmall{
  font-size: 12px;
}

.container {
  position: relative;
  height: 50px;
  background: #fff;
  box-shadow: 0px 0px 2px #888888;
  border-radius: 5px;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.container{
  width: 90%;
  margin: 20px auto;
  margin-bottom: 0;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.uploader-text{
  width: 100%;
  line-height: 50px;
  font-size: 34rpx;
  /* color: #007aff; */
  color: black;
}

.top{
  position: relative;
  height:50px;
  background-color: #275085;
}
.topimage{
  position: absolute;
  height: 65%;
  /* left:-100px; */
  top:50%;
  transform: translate(-35%,-50%);
}
.userinfo{
  display: flex;
  position: absolute;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  right:80px;
  top:50%;
  transform: translate(0,-50%);
  color:white;
}
.trimage{
  position: absolute;
  top:50%;
  right:5%;
  transform: translate(50%, -50%);
  height: 40%;
}
.btnimage{
  position: absolute;
  top:50%;
  transform: translate(0, -50%);
  height:32px;
  width: 32px;
}

.table {
  margin:10px auto;
  border: 1px solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 95%;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.th,
.td {
  padding: 10px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width: 100%
}

.th {
  font-weight: 700;
  background-color: #dadada
}