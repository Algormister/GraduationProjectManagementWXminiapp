<!--pages/ttopicres/ttopicres.wxml-->
<view class="top">
  <image class="topimage" mode="aspectFit" src="../../images/index-top.png"></image>
  <view class="userinfo">
    <text style="font-size:10px;">{{userid}}</text>
    <text style="font-size:10px;">{{name}}</text>
  </view>
</view>
<view class="container" wx:for="{{list}}"  wx:key="index">
  <view class="uploader">
      <text>题目：{{item.paper}}</text>
      <view wx:if="{{item.zt=='0'}}">
      <text>状态：审核中</text>
      </view>
      <view wx:if="{{item.zt=='1'}}">
      <text>状态：已通过</text>
      </view>
      <view wx:if="{{item.zt=='2'}}">
      <text>状态：未通过</text>
      </view>
  </view>
</view>